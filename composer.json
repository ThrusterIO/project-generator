{
    "name": "thruster/project-generator",
    "type": "tool",
    "description": "Thruster ProjectGenerator Tool",
    "keywords": ["project-generator", "thruster"],
    "homepage": "https://thruster.io",
    "license": "MIT",
    "authors": [
        {
            "name": "Aurimas Niekis",
            "email": "aurimas@niekis.lt"
        }
    ],
    "bin": ["bin/thruster-project"],
    "require": {
        "php": ">=7.3",
        "cpliakas/git-wrapper": "^1.7",
        "funct/funct": "^1.5",
        "symfony/console": ">=4.2",
        "symfony/filesystem": ">=4.2",
        "symfony/finder": ">=4.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^8",
        "squizlabs/php_codesniffer": "^3"
    },
    "autoload": {
        "psr-4": {
            "Thruster\\Tool\\ProjectGenerator\\": "src"
        },
        "classmap": [
            "src/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Thruster\\Tool\\ProjectGenerator\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html build/html/",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests",
        "phpcs-ci": "phpcs --standard=psr2 src/",
        "test-ci": "phpunit --coverage-text --coverage-clover=coverage.clover"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
